<form action="/cadastro_atendimento" method="POST">
<h3>Cliente</h3>

<p>Nome</p>
<input type="text" name="nome_cliente">

<p>Empresa</p>
<input type="text" name="nome_empresa">

<p>Telefone</p>
<input type="text" name="telefone_cliente">

<p>Problema</p>
<textarea name="problema_cliente"></textarea>

<h3>Endereço</h3>

<p>Endereço</p>
<input type="text" name="endereco_cliente_rua">

<p>Número</p>
<input type="text" name="endereco_cliente_numero">

<p>Complemento</p>
<textarea name="endereco_cliente_complemento"></textarea>

<p>Status</p>
<input type="radio" id="Finalizado" name="Radio" value="Finalizado">Finalizado <br>

<input type="radio" id="Pendente" name="Radio" value="Pendente">Pendente <br>


<p>Funcionário</p>
<select name="nome_funcionario">

{{#each funcionarios}}
   <option >{{dataValues.nome_funcionario}}</option>
{{/each}}
</select>



<button type="submit">Cadastrar atendimento</button>
</form>


